<%- include('../partials/dashboard/header') %>
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <label>Type your task for today</label>
          <form action="/dashboard/tasks" method="post">
            <textarea rows="3" class="form-control" placeholder="What do you want to do in nearly future?"
              name="task"></textarea>
        </div>
      </div>
    </div>
    <button type="submit" class="btn btn-info btn-fill pull-right">Add task</button>
    </form>
    <div class="clearfix"></div>
    <div class="row" style="margin-top:5%;">
      <div class="col-md-12">
          <% if(tasks.length > 0) {%>
        <div class="card">
          <div class="header">
            <h4 class="title">Your tasks</h4>
         
          </div>
          <div class="content table-responsive table-full-width">
            <table class="table table-hover table-striped">
              <thead>
                <tr>
                  <th></th>
                  <th>Task</th>
                  <th>Added</th>
                  <th></th>

                </tr>
              </thead>
              <tbody>
                <%  let index = 1; tasks.forEach(task =>{ %>
                <tr>
                  <th scope="row"><%= index %></th>
                  <td><%= task.task %></td>
                  <td><%= task.date %></td>
                  <td>
                    <form method="POST" action="/dashboard/tasks/remove">
                      <input type="hidden" name ="id" value="<%= task._id %>">
                      <button type="submit" class="btn btn-danger inline"> Delete </button>
                    </form>
                  </td>

                </tr>
                <% index++;}); %>

              </tbody>
            </table>
          </div>
        </div>
      
      <% } else { %>
      <div class="alert alert-success" role="alert">
        You don't have any tasks!
      </div>
      <% } %>
    </div>
    </div>
  </div>
</div>

<%- include('../partials/dashboard/footer') %>